<h4>Add Comment</h4>
<%= form_for([@quote, @quote.comments.build]) do |f| %>
	<p>
		<%= f.label :username %><br>
		<%= f.text_field(:username, {:class => 'form-control'}) %>
	</p>
	<p>
		<%= f.label :text %><br>
		<%= f.text_area(:text, {:class => 'form-control'}) %>
	</p>
	<p>
		<%= f.submit({:class => 'btn btn-success'}) %>
	</p> 
<% end %>